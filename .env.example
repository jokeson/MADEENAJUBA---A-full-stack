# MongoDB Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/madeenajuba
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/madeenajuba?retryWrites=true&w=majority

# Database Name (optional, defaults to 'madeenajuba')
MONGODB_DB_NAME=madeenajuba

# Next.js Configuration
NODE_ENV=development

# Cloudinary Configuration (for image uploads)
# Get these from https://cloudinary.com dashboard
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# JWT Secret (for authentication - generate a random string)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
